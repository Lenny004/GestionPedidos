<?xml version="1.0" encoding="utf-8" ?>
<configuration>
    <!-- Cadenas de conexión a la base de datos -->
    <connectionStrings>
      <add name="OrderManagementDB"
           connectionString="Data Source=.;Initial Catalog=temp;Integrated Security=True;"
           providerName="System.Data.SqlClient"/>
    </connectionStrings>

    <!-- Configuraciones personalizadas de la aplicación -->
    <appSettings>
      <!-- Información de la aplicación -->
      <add key="AppName" value="Sistema de Gestión de Pedidos"/>
      <add key="Version" value="1.0.0"/>
      <add key="Year" value="2025"/>

      <!-- Configuración de sesión -->
      <add key="SessionTimeout" value="30"/>
      <add key="MaxLoginAttempts" value="3"/>

      <!-- Configuración de seguridad -->
      <add key="MinPasswordLength" value="6"/>
      <add key="RequireStrongPassword" value="false"/>

      <!-- Configuración de notificaciones -->
      <add key="ShowNotifications" value="true"/>
      <add key="NotificationDuration" value="3"/>

      <!-- Configuración de stock -->
      <add key="StockMinimoAlerta" value="10"/>
      <add key="StockCriticoAlerta" value="5"/>
    </appSettings>
    <startup> 
        <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.7.2" />
    </startup>
</configuration>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">

  <targets>
    <!-- Guardar logs en archivo -->
    <target name="logfile"
            xsi:type="File"
            fileName="${basedir}/logs/${shortdate}.log"
            layout="${longdate} [${level:uppercase=true}] ${logger} - ${message} ${exception:format=tostring}" />

    <!-- Mostrar logs en la ventana Output de Visual Studio -->
    <target name="debugger"
            xsi:type="Debugger"
            layout="${time} [${level:uppercase=true}] ${logger} - ${message} ${exception:format=tostring}" />

    <!-- Opcional: consola (Ãºtil si corres con consola) -->
    <target name="console"
            xsi:type="Console"
            layout="${time} [${level:uppercase=true}] ${message}" />
  </targets>

  <rules>
    <!-- Guardar todos los niveles en archivo -->
    <logger name="*" minlevel="Debug" writeTo="logfile" />

    <!-- Mostrar Info+ en Depurador -->
    <logger name="*" minlevel="Info" writeTo="debugger" />

    <!-- Opcional: consola -->
    <logger name="*" minlevel="Info" writeTo="console" />
  </rules>
</nlog>